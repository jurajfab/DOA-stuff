apiVersion: v1
kind: Service
metadata:
  labels:
    app: rambo
  name: rambo
  # namespace: application
spec:
  ports:
  - name: www
    port: 8080
    protocol: TCP
    targetPort: 8000
  selector:
    app: rambo
  type: LoadBalancer

