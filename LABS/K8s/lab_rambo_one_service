--- Lab: RAMBO on one service --- 

apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: rambo
    country: de
    env: test
  name: rambo-mu
spec:
  replicas: 2
  selector:
    matchLabels:
      app: rambo
  template:
    metadata:
      labels:
        app: rambo
    spec:
      containers:
      - image: bletvaska/rambo:1
        name: rambo

---

apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: rambo
    country: sk
    env: prod 
    region: east 
  name: rambo-ke
